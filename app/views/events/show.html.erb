<h1><%=@event.title %></h1>
<%= render @event %>

<h2>Attendees</h2>
<div id="event_attendees">
  <% @event.attendees.each do |attendee| %>
    <%= attendee.email %><br>
  <% end %>
  <br>
  <br>
</div>

<div>
  <%= link_to "Edit this event", edit_event_path(@event) %> |
  <%= link_to "Back to events", events_path %>

  <%= button_to "Attend this event", event_attendees_attend_path, method: :post, params: { event_id: @event.id } %>

  <%= button_to "Destroy this event", @event, method: :delete %>
</div>
